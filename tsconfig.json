{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "es2023"],
    "types": ["node", "vite/client"],
    "target": "es2023",
    "module": "es2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
